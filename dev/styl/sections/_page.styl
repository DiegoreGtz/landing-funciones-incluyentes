.info
	max-width 1000px
	margin 1em auto
	padding-top: 1em
	text-align: center
	position: relative
	
	&-poster
		display inline-block
		vertical-align top
		max-width 180px
		
	&-container
		display block
		width 90%
		margin 0 auto
		+above(800px)
			display inline-block
			width calc(80% - 200px)
			padding 0 1rem
		
		
.poster
	max-width 180px
	margin 0
	padding 0
	
.movie
	&-title
		//max-width 460px
		margin 10px auto
		text-align center
		color white
		montseB()
		font-size 36px
		
		+above(800px)
			text-align left
			margin 10px 0
	
	&-settings
		border-top 1px solid white
		border-bottom @border-top
		padding 10px 0
		text-align center
		+above(600px)
			text-align left
		
		
		
				
		&-detail,
		&-format
			color $cyan
			montseL()
			display inline-block
			vertical-align middle

			img 
				max-width 100px
				margin 0 10px
		
		&-detail
			width 90%
			display block
			max-width 400px
			margin 10px auto
			
			+above(600px)
				padding-right 40px
				width calc(100% - 260px)
				display inline-block
				
	&-schedule
		text-align left
		margin 1em 0
		
.schedule
	&-title
		color white
		margin 1em 0
		letter-spacing 1px
		montseL()
		font-size 1.2rem
		>strong
			montseM()
	&-card
		margin 1rem 0
		background-color white
		border-radius 5px
		box-shadow 0 3px 5px rgba(darken($blue, 20%), .2)
		padding 10px 1rem
		montseL()
		
.card
	&-info
		padding  10px 0 
		&:first-child
			border-bottom 1px solid lightgray
	
	&-cinema
		color $blue
		margin-bottom 10px
		font-size 1.2em
		
	&-location
		display inline-block
		width calc(100% - 90px)
		font-size .9em
		
.ico-location
	width 45px
	height @width
	display inline-block
	vertical-align text-bottom
	background url('//static.cinepol.is/landings/funciones-incluyentes/imagenes/ico-location.png') no-repeat center center / contain

.fi
	&-detail,
	&-kind
		&-txt
			border-left: .2em solid #2ab1e0;
			padding: .6em 1em;
			text-align: left;
			color: #435464
	
	&-kind
		&-title
			color: #435464
			text-align left
			margin-bottom 10px

		&-images
			padding 16px
			img
				width: 49%;
				margin-left: 2%
				&:first-child
					margin 0
				
			

@media only screen and (min-width:1000px)

	.fi-kind-col 
		float: left;
		width: 49%;
		margin-left: 2%
		&:first-child 
			margin: 0
	

.ap-slide
	font-family: Montserrat, sans-serif;
	background-color: #fff;
	padding: 3.4em 1em 1em;
	position: absolute;
	top: 0;
	z-index: 12;
	opacity: 0;
	display: none;
	-webkit-transition: .3s all;
	transition: .3s all;
	-webkit-transition-delay: .3s;
	transition-delay: .3s;
	-webkit-box-shadow: 1px 1px 1em rgba(0, 0, 0, .75);
	box-shadow: 1px 1px 1em rgba(0, 0, 0, .75);
	height: 0
	
	&.is-active
		display: block;
		opacity: 1;
		height: 18em
		
.ap-area
	height: 100%;
	overflow: auto

.close-this
	font-weight: 300;
	border: 1px solid green
	border-radius: 1em;
	width: 24px;
	height: 24px;
	display: block;
	position: absolute;
	right: 1em;
	top: 1em;
	font-size: 1em;
	line-height: 20px;
	color: green
	

